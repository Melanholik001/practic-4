        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practic_3"
        mc:Ignorable="d"
        Title="Userxaml" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Добро пожаловать" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" Grid.Row="0"/>
        <TextBox x:Name="Name" Height="23" TextWrapping="Wrap" Text="" Width="120" Margin="10,6.8,643.6,11" Grid.Row="9"/>
        <Button Content="Вернуться в основное окно" Grid.Row="9" Margin="298,315.8,261.6,-297.2" Click="ReturnToMain_Click"/>
